{% extends 'MaisonLiguesCroisiereBundle:Default:base.html.twig' %}
{% block corps %}
<div id="page-wrapper">
	<h2> Réservation : </h2>
	<form class="col-sm-10" method="post" role="form">
		<div class="col-lg-6">
			{{form_start(form)}}
				<div class="form-group">
					<label> Nom : </label>{{ form_widget(form.nom) }}
				</div>
				<div class="form-group">
					<label> Adresse : </label>{{ form_widget(form.adresse) }}
				</div>
		</div>
		<div class="col-lg-6">

			<div class="form-group">
				<label> Code Postal  : </label>{{ form_widget(form.cp) }}
			</div>
			<div class="form-group">
				<label> Ville: </label>{{ form_widget(form.ville) }}
			</div>
					
		</div>
		<div class="col-lg-8">

			<div class="table-responsive">
				<table class="table table-striped table-bordered table-hover">
					<tr>
						<th> Type </th>
						<th> Prix </th>
						<th> /// </th>
					</tr>
					{% set i=0 %}
					{% for unEnreg in form.lesEnregistrements %}
					</tr>
						
						<td> <div style="visibility:hidden;">{{form_row(unEnreg.leType)}} </div>
							{{lesTarifs[i].leType.libelle}} </td>
						<td>{{lesTarifs[i].tarif}}  € </td>
						<td>{{form_row(unEnreg.quantite)}} </td>
						{% set i=i+1 %}
					</tr>
					{% endfor %}
				</table>
			</div>
		</div>
		<button type="submit" class="btn btn-outline btn-primary btn-lg btn-block"> Réserver</button>
		

		{{ form_end(form) }}

	</form>
</div>
{% endblock %}