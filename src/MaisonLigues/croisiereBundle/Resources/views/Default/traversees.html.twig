{% extends 'MaisonLiguesCroisiereBundle:Default:base.html.twig' %}
{% block corps %}
<div id="page-wrapper">
	<div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Traversées entre {{laLiaison.leDepart.Nom}} et {{laLiaison.lArrive.Nom}} </h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
	<div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th> Date </th>
                    <th> Heure </th>
                    <th> Nom Bateau </th>
                    <th> /// </th>
                </tr>
            </thead>
            <tbody>
                {% for laTraversee in laLiaison.getLesTraversses() %}
                <tr>
                    <td> {{ laTraversee.getDate()|date('d-m-Y') }}</td>
                    <td>{{laTraversee.getHeure()}}</td>
                    <td>{{laTraversee.getleBateau.getNom()}}</td>
                    <td> <a href="{{path('maison_ligues_croisiere_reservation',{'id':laTraversee.getId() })}}"> Réserver </a> </td>
                </tr>
                {% endfor %}
    		 </tbody>
        </table>
    </div>
</div>
{% endblock %}