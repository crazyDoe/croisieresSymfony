{% extends 'MaisonLiguesCroisiereBundle:Default:base.html.twig' %}
{% block corps %}
<div id="page-wrapper">
	<div class="row">
        <div class="col-lg-12">
            <h1 class="page-header"></h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
	<div class="table-responsive">
		<table class="table table-striped table-bordered table-hover">
			<tr>
				<th colspan="3"> Traversée </th>
				<th colspan ="3"> Places disponibles par Catégorie </th>
			</tr>
			<tr>
				<th> N ° </th>
				<th> Heure </th>
				<th> Bateau </th>
				<th> A <br> Passager </th>
				<th> B <br> Véh.inf.5m </th>
				<th> C <br> Véh.sup.5m</th>
			</tr>
			{% for traversee in lesTraversees %}
			<tr>
				<td> {{traversee.id}}
				<td> {{traversee.heure}} </td>
				<td> {{traversee.leBateau.nom}}</td>
				{% for contenu in traversee.leBateau.leContenant %}
				<td> {{contenu.capaciteMax}}</td>
				{% endfor %}
				<td>  <a href="{{path('maison_ligues_croisiere_reservation',{'id':traversee.id()})}}">Réserver</a> </td>
			</tr>
			{% endfor %}
		</table> 
	</div>
{% endblock %}