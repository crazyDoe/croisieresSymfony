{% extends 'MaisonLiguesCroisiereBundle:Default:base.html.twig' %}
{% block corps %}
<div id="page-wrapper">
	<div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Les Liaisons</h1>
                </div>
                <!-- /.col-lg-12 -->
    </div>
	<div class="table-responsive">
		<table class="table table-striped table-bordered table-hover">
			<tr>
				<th> Port Départ  </th>
				<th> Port Arrivé </th>
				<th> Distance </th>
				<th> Secteur </th>
				<th> /// </th>
			</tr>
			{% for liaison in lesLiaisons %}
			<tr>
				<td> {{liaison.getLeDepart.getNom()}}</td>
				<td> {{liaison.getLArrive.getNom()}}</td>
				<td> {{liaison.getDistance()}}</td>
				<td> {{liaison.getLeSecteur.getNom()}}</td>
				<td> <a href="{{path('maison_ligues_croisiere_traversees',{'id':liaison.getId() })}}"> Louer </a> </td>
			</tr>
			{% endfor %}
		</table>
	</div>
{% endblock %}