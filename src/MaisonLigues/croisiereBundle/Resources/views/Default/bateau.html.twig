{% extends 'MaisonLiguesCroisiereBundle:Default:base.html.twig' %}
{% block corps %}
<div id="page-wrapper">
	<div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Les Bateaux</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
	<div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                	<th> ID </th>
                    <th> Nom Bateau </th>
					<th> /// </th>
                    <th> Capacit√© </th>
                </tr>
            </thead>
            <tbody>
                {% for bateau in lesBateaux %}
				<tr>
					<td> {{bateau.getId()}}</td>
					<td> {{bateau.getNom()}}</td>
                    <td> <a href=""> Louer </a> </td>
                    <td>
                        {% for contenu in bateau.leContenant %}
                            {{contenu.laCategorie.Lettre}}
                             : 
                             {{contenu.capaciteMax}}</br>
                        {% endfor %}
                    </td>
				</tr>
				{% endfor %}
    		 </tbody>
        </table>
    </div>
</div>
{% endblock %}